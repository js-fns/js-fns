{
  "compilerOptions": {
    "rootDirs": ["."],
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["lib", "node_modules"]
}
